@model IEnumerable<RightCareSite.Models.DataBase.Sub_Acount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>تسديدات الموردين</h3>
<p>
    @Html.ActionLink("تسديد جديد", "Create")
</p>
<table class="table">
    <tr>
        <th>
            المورد
        </th>
        <th>
            كود المورد
        </th>

        <th>
            المبلغ
        </th>
        <th>
            التاريخ
        </th>
        <th>
            رقم ايصال التسديد
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Suply_Tbl.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suply_Tbl.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EslNo)
            </td>
            <td>
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>