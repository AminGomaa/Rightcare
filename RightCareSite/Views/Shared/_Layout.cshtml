<!DOCTYPE html>
<html>
<head align="right">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container " align="right">
            <div class="navbar-header " >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Right Care", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
               @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(" ", "Index", "Home")</li>
                    <li>@Html.ActionLink("عن رايت كير", "About", "Home")</li>
                    <li>@Html.ActionLink("اتصل بنا", "Contact", "Home")</li>
                    <li>@Html.ActionLink("المنتجات", "Index", "Product_Tble")</li>
                    <li>@Html.ActionLink("المندوبين","Index","MND_TBL")</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content" align="right">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Amin Gomaa</p>
        </footer>
                 
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
