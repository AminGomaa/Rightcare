@model IEnumerable<RightCareSite.Models.DataBase.Buy_tbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>فواتير المشتريات</h2>

<p>
    <a href="@Url.Action("AddOrder", "Purch")" >شراء جديد</a>
</p>
    <table class="table">
        <tr>
            <th>
                التاريخ
            </th>
            <th>
                كود المورد
            </th>
            <th>
                اسم المورد
            </th>
            <th>
                رقم فاتورة المشتريات
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sup_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sup_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.ActionLink("تفاصيل الفاتورة", "Details", new { id = item.Id }) |
                    @Html.ActionLink("طباعة", "PInvoice", new { id = item.Id })

                </td>
            </tr>
        }

    </table>
