            </div>
            @Html.LabelFor(model => model.CUST_ADD,"العنوان", htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("MND_TBLId", null, htmlAttributes: new { @class = "form-control" })
