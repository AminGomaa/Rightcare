@model RightCareSite.Models.DataBase.CUST_TBL

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>اضافة عميل جديد</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
