        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CUST_NAME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CUST_NAME, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.CUST_NAME, "الاسم", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CUST_TEL, new { htmlAttributes = new { @class = "form-control" } })
