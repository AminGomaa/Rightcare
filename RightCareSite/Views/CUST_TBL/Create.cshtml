        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("GovernorateId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GovernorateId, "", new { @class = "text-danger" })
