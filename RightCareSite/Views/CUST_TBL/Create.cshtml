            </div>
            @Html.LabelFor(model => model.CUST_TEL, "التليفون", htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CUST_ADD, new { htmlAttributes = new { @class = "form-control" } })
